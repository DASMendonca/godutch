<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:backgroundTint="@color/go_dutch_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="#fffef3"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="5dp"
        android:weightSum="5"
        android:id="@+id/namePriceLayout"
        android:layout_marginBottom="5dp"
        >




        <EditText
            android:inputType="textMultiLine|textNoSuggestions"
            android:fontFamily="sans-serif-light"
            android:background="@null"
            android:layout_weight="4"
            android:layout_gravity="left"
            android:layout_marginLeft="2dp"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/productDescription"
            android:text="Dummy Product Description"
            android:textColor="@color/go_dutch_grey"
            android:textSize="15dp"
            />

        <EditText
            android:inputType="textMultiLine|textNoSuggestions"
            android:fontFamily="sans-serif-light"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rowPrice"
            android:textSize="15dp"
            android:text="20.00 â‚¬"
            android:textColor="@color/go_dutch_grey"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:alpha="0.5"
            android:layout_height="15dp"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_gravity="right|center"
            android:layout_width="15dp"
            android:id="@+id/deleteButton"/>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/peopleLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="left"
        >

    </LinearLayout>

</LinearLayout>
