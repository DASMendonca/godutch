<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="5"
        android:id="@+id/namePriceLayout"
        >
        <TextView
            android:layout_weight="4"
            android:layout_gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/productDescription"
            android:text="Dummy Product Description"
            />
        <TextView
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rowPrice"
            android:text="20.00 â‚¬"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/peopleLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_circle_design"
            android:text="DM"
            android:id="@+id/personShortName"
            android:layout_margin="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_circle_design"
            android:text="JM"
            android:layout_margin="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_circle_design"
            android:text="RR"
            android:layout_margin="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_circle_design"
            android:text="VM"
            android:layout_margin="2dp"
            />

    </LinearLayout>

</LinearLayout>

</RelativeLayout>
