<?xml version="1.0" encoding="utf-8"?>
<psoc.com.godutch.PersonsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp" android:layout_height="50dp">

    <!-- TODO: Update blank fragment layout -->



    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:onClick="buttonClicked"
        />


    <View
        android:alpha="1.0"
        android:id="@+id/mainButtonCircle"
        android:background="@drawable/button_circle_design_gray"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/round_button_margin"
        android:layout_marginRight="@dimen/round_button_margin"
        android:layout_marginTop="@dimen/round_button_margin"
        android:layout_marginBottom="@dimen/round_button_margin"
        android:layout_height="fill_parent"/>




    <TextView
        android:background="@drawable/button_circle_design_blue"
        android:textColor="@color/go_dutch_white"
        android:id="@+id/counter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:layout_gravity="right"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        />

    <TextView
        android:textColor="@color/go_dutch_white"
        android:id="@+id/nameLabel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="V M"
        android:gravity="center"
        />

</psoc.com.godutch.PersonsLayout>
