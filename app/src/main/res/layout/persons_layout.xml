<?xml version="1.0" encoding="utf-8"?>
<psoc.com.godutch.PersonsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp" android:layout_height="50dp">

    <!-- TODO: Update blank fragment layout -->



    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:onClick="buttonClicked"
        />


    <View
        android:alpha="0.2"
        android:id="@+id/mainButtonCircle"
        android:background="@drawable/button_circle_design"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/round_button_margin"
        android:layout_marginRight="@dimen/round_button_margin"
        android:layout_marginTop="@dimen/round_button_margin"
        android:layout_marginBottom="@dimen/round_button_margin"
        android:layout_height="fill_parent"/>


    <TextView
        android:id="@+id/counter"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:text="1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/round_button_margin"
        android:layout_marginTop="@dimen/round_button_margin"
        android:gravity="center"

        />
    <View
        android:alpha="0.2"
        android:id="@+id/valueButtonCircle"
        android:background="@drawable/button_circle_design"
        android:layout_width="15dp"
        android:layout_marginLeft="@dimen/round_button_margin"
        android:layout_marginRight="@dimen/round_button_margin"
        android:layout_marginTop="@dimen/round_button_margin"
        android:layout_marginBottom="@dimen/round_button_margin"
        android:layout_alignParentRight="true"
        android:layout_height="15dp">




    </View>

</psoc.com.godutch.PersonsLayout>
